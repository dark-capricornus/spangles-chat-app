# Production Environment Variables for Spangles Chat App
# Copy these to your Heroku config or .env file

# Environment
NODE_ENV=production

# JWT Secret (CHANGE THIS - Generate a secure secret)
# Use generate-jwt-secret.bat to create a secure one
JWT_SECRET=SpanglesChatApp2025_Production_CHANGE_THIS_TO_SECURE_SECRET

# MongoDB Connection (Replace with your MongoDB Atlas URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/spangles_production?retryWrites=true&w=majority

# Port (Heroku sets this automatically)
PORT=5000

# Optional: Client URL for CORS (if deploying frontend separately)
# CLIENT_URL=https://your-frontend-domain.com

# Optional: Custom domain
# DOMAIN=your-custom-domain.com

# Security Headers (optional)
HELMET_ENABLED=true

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload Limits (optional)
MAX_FILE_SIZE=10485760
MAX_FILES=5

# Session Configuration (optional)
SESSION_SECRET=another_secure_secret_for_sessions

# Database Options (optional)
DB_CONNECTION_TIMEOUT=30000
DB_SOCKET_TIMEOUT=30000

# Logging Level
LOG_LEVEL=info

# Socket.IO Configuration
SOCKET_IO_CORS_ENABLED=true

# Production Optimizations
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=86400000
