{
  "version": 2,
  "builds": [
    {
      "src": "api/minimal.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/debug.js", 
      "use": "@vercel/node"
    },
    {
      "src": "client/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/debug",
      "dest": "/api/debug.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/minimal.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ]
}
